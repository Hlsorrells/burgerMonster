<div class="container">
  <div class="row">
    <div class="col-sm-5">

      <h2>Burgers ready to eat!</h2>
      <br>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="devour-burger" data-id="{{this.id}}">DEVOUR IT!</button>
        </li>
        {{/unless}}
        {{/each}}

      </ul>
    </div>

    <div class="col-sm-5">
      <h2>Burgers that are devoured!</h2>
      <br>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burger"></label>
        <input type="text" id="burger" name="name">
      </div>

      <button type="submit">Submit</button>

    </form>
  </div>
</div>